# Module's Component Configuration file
#
# Remember: It is up to the module itself to impose rules of
# how to compile the options. All the global Makefile needs
# is the final def. of Java and native file lists and some
# other def. (like VPATH)
######################################################################

SUBSYSTEMS += jsr135

JSR_135_BUILD_DIR       = $(JSROP_BUILD_DIR)/jsr135
JSR_135_GENERATED_DIR   = $(JSR_135_BUILD_DIR)/generated
JPP_DEFS             += -DENABLE_JSR_135

# set USE_MIDP flag
ifeq ($(TARGET_VM),cldc_vm)
USE_MIDP = true
else 
JPP_DEFS += -DENABLE_CDC
ifeq ($(CVM_INCLUDE_MIDP), true)
USE_MIDP = true
else 
USE_MIDP = false
endif
endif

ifeq ($(TARGET_VM),cldc_vm)
JSROP_PLATFORM = cldc_application
else
JSROP_PLATFORM = jump_application
endif 

include $(JSR_135_DIR)/build/$(JSROP_PLATFORM)/javacall/config.gmk

ifneq ($(USE_JSR_75),true)
USE_FILE_CONNECTION = false
endif

include $(JSR_135_DIR)/build/$(JSROP_PLATFORM)/features.defs

# Specify romizer configuration file for the MMAPI
# and path where the file is located
#
ROMGEN_INCLUDE_PATHS += $(JSR_135_DIR)/build/$(JSROP_PLATFORM)
ROMGEN_CFG_FILES     += jsr135_rom.cfg

# Include JSR_135 system properties in Configuration
JSR_135_PROPERTY_FILES = \
    $(JSR_135_DIR)/build/$(JSROP_PLATFORM)/javacall/properties_jsr135.xml

SUBSYSTEM_CONFIGURATION_INPUT_FILES += \
    $(JSR_135_PROPERTY_FILES)


