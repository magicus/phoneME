JSR_135_LIB_NAME      = jsr135
JSR_135_JAR           = $(JSROP_LIB_DIR)/$(JSR_135_LIB_NAME).jar
JSR_135_NATIVE_LIB    = $(JSROP_LIB_DIR)/$(LIB_PREFIX)$(JSR_135_LIB_NAME)$(LIB_POSTFIX)
JSR_135_NATIVE_OBJS   = $(patsubst %.c,$(JSROP_OBJ_DIR)/%.o,$(SUBSYSTEM_JSR_135_NATIVE_FILES))

JSROP_NATIVE_OBJS    += $(JSR_135_NATIVE_OBJS)
JSROP_CNI_CLASSES    += $(SUBSYSTEM_JSR_135_CNI_CLASSES)
JSROP_NATIVE_LIBS    += $(JSR_135_NATIVE_LIB)
JSROP_EXTRA_INCLUDES += $(SUBSYSTEM_JSR_135_EXTRA_INCLUDES)

CVM_INCLUDE_JAVACALL  = true

ifeq ($(USE_JSR_75), true)
JSR_135_DEPS = $(PS)$(JSR_75_JAR)
endif

$(JSR_135_JAR): $(JPP_CLASS_FILES) $(SUBSYSTEM_JSR_135_JAVA_FILES)
	$(call compileJSROP,jsr135,$(JSR_135_BUILD_DIR)/classes,$(SUBSYSTEM_JSR_135_JAVA_FILES),$(JSR_135_DEPS))
	$(call makeJSROPJar,$(JSR_135_JAR),$(JSR_135_BUILD_DIR)/classes)

$(JSR_135_NATIVE_LIB): javacall_lib $(JSR_135_NATIVE_OBJS) $(ABSTRACTIONS_NATIVE_LIBRARY)
	@echo "Linking $@"
	$(AT)$(call makeSharedLibrary, $(JSR_135_NATIVE_OBJS))

# Append JSR 135 source bundle creation to target
source_bundle:: jsr_135_source_bundle

# Create JSR 135 source in subdir 'jsr135/'
JSR_135_SOURCE_OUTPUT_DIR=$(SOURCE_OUTPUT_DIR)/jsr135

# Copy and filter JSR 135 source in JSR_135_SOURCE_OUTPUT_DIR
jsr_135_source_bundle: $(JSR_135_DIR)
	@echo " ... JSR 135 source bundle" $(LOG)
	@$(call source_bundle_filter,$(JSR_135_DIR),$(JSR_135_SOURCE_OUTPUT_DIR),src build)

ifeq ($(TARGET_VM),cldc_vm)
EXTRA_INCLUDES		+= $(SUBSYSTEM_JSR_135_EXTRA_INCLUDES)
else
# jump version
SUBSYSTEM_JSR234_JAVA_FILES = $(SUBSYSTEM_JSR_135_JAVA_FILES)
SUBSYSTEM_JSR234_NATIVE_FILES = $(SUBSYSTEM_JSR_135_NATIVE_FILES)
endif
