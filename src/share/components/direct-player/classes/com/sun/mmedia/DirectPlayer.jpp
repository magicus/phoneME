            stopTimer.cancel();
            stopTimer = null;
        }
        // #endif
        // #ifdef RECORD [
        if (recordControl != null) {
            recordControl.playerStopped();
        }
        // #endif ]
        // #ifdef MIDI_CONTROL [
        if (midiControl != null) {
            midiControl.playerStopped();
